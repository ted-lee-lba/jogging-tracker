@{
    ViewBag.Title = "Edit User";
}
<h2>@ViewBag.Title</h2>

<div class="row" ng-controller="EditUserController">
    <div ng-show="SaveFailed" class="alert alert-danger">
        <ul>
            <li ng-repeat="msg in Message">
                {{msg}}
            </li>
        </ul>
    </div>
    <form name="EntryForm" class="form-horizontal" role="form" ng-submit="Save()">
        <div class="col-md-8">
            <div ng-show="SubmitError" class="alert alert-danger">{{msg}}</div>
            @Html.Partial("_UserEntry")
            <div class="form-group">
                <label class="col-md-2 control-label">@JoggingTracker.Localization.Label.CHANGE_PASSWORD</label>
                <div class="col-md-10">
                    <input type="password" ng-model="UserModel.Password" name="Password" ng-class="Submited?'ng-dirty':''" autofocus class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">@JoggingTracker.Localization.Label.CONFIRM_PASSWORD</label>
                <div class="col-md-10">
                    <input type="password" name="ConfirmPassword" class="form-control"
                           ng-model="UserModel.ConfirmPassword"
                           compare-to="UserModel.Password" />
                    <span style="color:red" ng-show="EntryForm.ConfirmPassword.$error.compareTo">@JoggingTracker.Localization.Message.PASSWORD_NOT_MATCH</span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@JoggingTracker.Localization.Label.SUBMIT" class="btn btn-success" />
                    <input type="button" ng-click="Cancel()" value="@JoggingTracker.Localization.Label.CANCEL" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>
